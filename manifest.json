{
  "manifest_version": 3,
  "name": "Social Poster - Auto Generate Social Media Posts",
  "version": "1.0.0",
  "description": "Transform any webpage into engaging social media posts with one click",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Generate Social Posts"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.jpg", "*.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}