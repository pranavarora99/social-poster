{
  "manifest_version": 3,
  "name": "Social Poster - AI Post Generator",
  "version": "1.2.0",
  "description": "Transform any webpage into engaging social media posts with one click",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://api-inference.huggingface.co/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Generate Social Posts"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.jpg", "*.svg", "popup.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'none'; img-src 'self' data: blob: https:; style-src 'self'; base-uri 'none'; form-action 'none';"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png", 
    "128": "icon128.png"
  }
}