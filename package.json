{
  "name": "social-poster",
  "version": "2.0.0",
  "description": "Enterprise-grade AI-powered Chrome extension for generating social media posts with advanced security and performance optimization",
  "main": "dist/popup.js",
  "scripts": {
    "dev": "concurrently \"node build.js --dev\" \"npm run css:watch\"",
    "build": "npm run clean && npm run type-check && node build.js && npm run css:build",
    "build:dev": "npm run clean && node build.js --dev && npm run css:build",
    "css:build": "tailwindcss -i ./src/input.css -o ./popup.css --minify",
    "css:watch": "tailwindcss -i ./src/input.css -o ./popup.css --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts --fix && web-ext lint --source-dir=.",
    "lint:check": "eslint src/**/*.ts && web-ext lint --source-dir=.",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run security:audit && npm run lint:check",
    "zip": "npm run build && zip -r social-poster-v2.0.0.zip . -x node_modules/\\* .git/\\* \\*.zip src/\\* \\*.ts build.js .github/\\* coverage/\\*",
    "zip:dev": "npm run build:dev && zip -r social-poster-v2.0.0-dev.zip . -x node_modules/\\* .git/\\* \\*.zip src/\\* \\*.ts build.js .github/\\* coverage/\\*",
    "validate": "npm run type-check && npm run lint:check && npm run test:ci && npm run security:check",
    "pre-commit": "npm run validate",
    "performance:analyze": "node scripts/analyze-bundle.js",
    "docs:generate": "typedoc --out docs src",
    "start": "npm run dev"
  },
  "keywords": [
    "chrome-extension",
    "social-media",
    "content-generation",
    "automation",
    "ai",
    "security",
    "enterprise",
    "performance",
    "linkedin",
    "twitter",
    "instagram"
  ],
  "author": "Enterprise Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/enterprise/social-poster"
  },
  "homepage": "https://socialposter.enterprise.com",
  "bugs": {
    "url": "https://github.com/enterprise/social-poster/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.8",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3",
    "web-ext": "^7.8.0"
  },
  "dependencies": {
    "isomorphic-dompurify": "^2.6.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "roots": ["<rootDir>/src"],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/*.(test|spec).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/tests/**",
      "!src/**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.ts"],
    "testTimeout": 10000,
    "maxWorkers": "50%"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "security"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "plugin:security/recommended",
      "prettier"
    ],
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "security/detect-object-injection": "off",
      "security/detect-non-literal-fs-filename": "off"
    },
    "env": {
      "browser": true,
      "es2022": true,
      "webextensions": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "browserslist": [
    "Chrome >= 88"
  ]
}