{
  "name": "social-poster",
  "version": "1.0.0",
  "description": "Transform any webpage into engaging social media posts",
  "main": "popup.js",
  "scripts": {
    "dev": "concurrently \"npm run css:watch\" \"web-ext run --source-dir=. --target=chromium\"",
    "build": "npm run css:build && web-ext build --source-dir=. --artifacts-dir=dist",
    "css:build": "tailwindcss -i ./src/input.css -o ./popup.css --minify",
    "css:watch": "tailwindcss -i ./src/input.css -o ./popup.css --watch",
    "lint": "web-ext lint --source-dir=.",
    "test": "jest",
    "zip": "npm run build && zip -r social-poster-v1.0.0.zip . -x node_modules/\\* .git/\\* \\*.zip src/\\*"
  },
  "keywords": [
    "chrome-extension",
    "social-media",
    "content-generation",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "web-ext": "^7.8.0",
    "jest": "^29.7.0",
    "@types/chrome": "^0.0.246",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "concurrently": "^8.2.2",
    "@tailwindcss/forms": "^0.5.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/social-poster"
  },
  "homepage": "https://socialposter.app"
}